{
    "compilerOptions": {
        "target": "es5",
        "esModuleInterop": true,
        "sourceMap": true,
        "module": "commonjs",
        "outDir": "../../dist/client/scripts",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "es2018",
            "scripthost",
            "es2015.collection"
        ],
        "baseUrl": ".",
        "paths": {
            "/build/three.module.js": ["node_modules/three/src/Three"],
            "/jsm/*": ["node_modules/three/examples/jsm/*"],
            "@src/*": ["./src/*"],
        },
        "moduleResolution": "node"
    },
    "include": [
        "**/*.ts"
    ]
}